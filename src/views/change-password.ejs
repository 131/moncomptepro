<section>
    <div class="container">
        <h3 class="section__title">Changez votre mot de passe</h3>

        <form autocomplete="off" action="/users/change-password" method="post">

        <% if (locals.notifications) { %>
            <% notifications.forEach(({type, message}) => { %>
            <div class="notification <%= type %>">
                <%= message %>
            </div>
            <% }) %>
        <% } %>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <input type="hidden" name="reset_password_token" value="<%= resetPasswordToken %>"/>

        <div class="form__group with-input-hint">
            <input class="form-control" required type="password" name="password" placeholder="Nouveau mot de passe*" autofocus="on">
            <small class="card__meta"><i>*10 caractères minimum</i></small>
        </div>

        <div class="form__group">
            <input class="form-control" required type="password" name="password_confirmation" placeholder="Confirmez le mot de passe" >
        </div>

        <div class="form__group">
            <input type="submit" value="Changer mon mot de passe" class="button large">
        </div>
        </form>
    </div>
</section>

<div class="container">
    <div class="text-center">
        <div class="container">
            <div class="text-center">
                <p><a class="external-link" href="/users/sign-up">Je n'ai pas de compte</a></p>

                <p><a class="external-link" href="/users/sign-in">J'ai déjà un compte</a></p>
            </div>
        </div>
    </div>
</div>
