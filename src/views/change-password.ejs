<div class="box-container">
    <h3 class="section__title">Changez votre mot de passe</h3>

    <form action="/users/change-password" method="post">

        <% if (locals.notifications) { %>
            <% notifications.forEach(({type, message}) => { %>
                <div class="notification <%= type %>">
                    <%= message %>
                </div>
            <% }) %>
        <% } %>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off">

        <input type="hidden" name="reset_password_token" value="<%= resetPasswordToken %>"/>

        <div class="form__group with-input-hint">
            <input class="form-control" required type="password" name="password" aria-label="Nouveau mot de passe*"
                   placeholder="Nouveau mot de passe*" autofocus="on">
            <small class="card__meta"><i>*10 caractères minimum</i></small>
        </div>

        <div class="form__group">
            <input class="form-control" required type="password" name="password_confirmation"
                   aria-label="Confirmez le mot de passe" placeholder="Confirmez le mot de passe">
        </div>

        <div class="form__group">
            <input type="submit" value="Changer mon mot de passe" class="button large wide">
        </div>
    </form>
</div>

<div class="container text-center">
    <p>Je n’ai pas de compte ? <a class="external-link" href="/users/sign-up">je crée mon compte</a></p>

    <p>J’ai déjà un compte ? <a class="external-link" href="/users/sign-in">je me connecte</a></p>
</div>
