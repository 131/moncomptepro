<div class="card-container">
    <div class="fr-card">
        <div class="fr-card__body">
            <div class="fr-card__content">
                <h4 class="fr-card__title">
                    Mot de passe oublié ?
                </h4>
                <div class="fr-card__desc">

                    <form action="/users/reset-password" method="post">
                        <%- include('partials/notifications.ejs', {notifications: notifications}) %>

                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off">

                        <div class="fr-input-group">
                            <label class="fr-label" for="login">Email
                                <span class="fr-hint-text">Celui que vous utilisez dans le cadre de votre travail</span>
                            </label>
                            <input class="fr-input" required type="email" id="login" name="login"
                                   <% if (!locals.loginHint) { %>autofocus="on"
                            <% } else { %> value="<%= locals.loginHint; %>"
                                    <% } %>
                            >
                        </div>

                        <%- include('partials/card-button-container.ejs', {label: 'Réinitialiser mon mot de passe'}) %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
