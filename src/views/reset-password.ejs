<section>
    <div class="container">
        <h3 class="section__title">Mot de passe oublié ?</h3>

        <form action="/users/reset-password" method="post">

        <% if (locals.notifications) { %>
            <% notifications.forEach(({type, message}) => { %>
            <div class="notification <%= type %>">
                <%= message %>
            </div>
            <% }) %>
        <% } %>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>" autocomplete="off">

        <div class="form__group">
            <input class="form-control" required type="email" name="login" placeholder="Email" autofocus="on">
        </div>

        <div class="form__group">
            <input type="submit" value="Réinitialiser mon mot de passe" class="button large">
        </div>
        </form>
    </div>
</section>

<div class="container">
    <div class="text-center">
        <div class="container">
            <div class="text-center">
                <p>Je n'ai pas de compte ? <a class="external-link" href="/users/sign-up">je crée mon compte</a></p>

                <p>J'ai déjà un compte ? <a class="external-link" href="/users/sign-in">je me connecte</a></p>
            </div>
        </div>
    </div>
</div>
